<h1><%= @world.title %> Highscores</h1>
<h4><%= link_to "Play again?", world_url(@world) %></h4>
<div class="divider"></div>
<table>
  <thead>
    <tr>
        <th data-field="rank">Rank</th>
        <th data-field="name">Name</th>
        <th data-field="time">Time (seconds)</th>
    </tr>
  </thead>
  <tbody>
    <% @highscores.each_with_index do |s, i| %>
      <tr>
        <td><%= (i+1) %></td>
        <td><%= s.name %></td>
        <td><%= s.time %></td>
      </tr>
    <% end %>
  </tbody>
</table>




